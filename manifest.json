{
  "manifest_version": 2,
  "name": "Text Selection Menu",
  "version": "1.0",
  "description": "Показывает контекстное меню при выделении текста",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}
