{
  "manifest_version": 2,
  "name": "Text Selection Panel",
  "version": "1.0",
  "description": "Показывает панель с кнопками при выделении текста",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["panel.css"]
    }
  ]
}