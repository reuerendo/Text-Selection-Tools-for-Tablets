{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.3",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "tap.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ]
}
