{
  "manifest_version": 2,
  "name": "Text Selection Tools for Tablets",
  "version": "1.2",
  "description": "Several improvements that make working on touch devices easier",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
	"tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "tap.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ]
}
