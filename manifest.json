{
  "manifest_version": 2,
  "name": "Текстовое Меню",
  "version": "1.0",
  "description": "Всплывающее меню при выделении текста",
  "permissions": [
    "clipboardWrite",
    "theme",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Текстовое Меню"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/selection-menu.js"],
      "css": ["content/selection-menu.css"]
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  }
}
